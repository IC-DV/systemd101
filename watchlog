]0;vagrant@localhost:~[vagrant@localhost ~]$ cat /opt/watchlog.sh 
#!/bin/bash

WORD=$1
LOG=$2
DATE=`date`

if grep $WORD $LOG &> /dev/null
then 
   logger "$DATE:some log, bruh"
else
   exit 0
fi
